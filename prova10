
def cadastrar_aluno():
    aluno = {}
    aluno['nome'] = input("Digite o nome do aluno: ")
    aluno['idade'] = int(input("Digite a idade do aluno: "))
    aluno['notas'] = (
        float(input("Digite a nota de Matemática: ")),
        float(input("Digite a nota de Ciências: ")),
        float(input("Digite a nota de História: "))
    )
    return aluno


def calcular_media(notas):
    return sum(notas) / len(notas)


def visualizar_alunos(alunos):
    if not alunos:
        print("Nenhum aluno cadastrado.")
    for aluno in alunos:
        media = calcular_media(aluno['notas'])
        print(f"\nNome: {aluno['nome']}")
        print(f"Idade: {aluno['idade']}")
        print(f"Notas: Matemática: {aluno['notas'][0]}, Ciências: {aluno['notas'][1]}, História: {aluno['notas'][2]}")
        print(f"Média: {media:.2f}")


def aluno_melhor_media(alunos):
    if not alunos:
        print("Nenhum aluno cadastrado.")
        return None
    melhor_media = -1
    aluno_top = None
    for aluno in alunos:
        media = calcular_media(aluno['notas'])
        if media > melhor_media:
            melhor_media = media
            aluno_top = aluno
    return aluno_top


def main():
    alunos = []
    
    while True:
        print("\nMenu:")
        print("1. Cadastrar aluno")
        print("2. Visualizar alunos cadastrados")
        print("3. Mostrar aluno com a melhor média")
        print("4. Sair")
        
        escolha = input("Escolha uma opção: ")
        
        if escolha == '1':
            aluno = cadastrar_aluno()
            alunos.append(aluno)
        elif escolha == '2':
            visualizar_alunos(alunos)
        elif escolha == '3':
            aluno_top = aluno_melhor_media(alunos)
            if aluno_top:
                media = calcular_media(aluno_top['notas'])
                print(f"\nAluno com a melhor média: {aluno_top['nome']}")
                print(f"Média: {media:.2f}")
        elif escolha == '4':
            print("Saindo...")
            break
        else:
            print("Opção inválida. Tente novamente.")


if __name__ == "__main__":
    main()
